# Stock Scout Environment Configuration
# Copy this to .env and fill in your API keys

# API Keys (Required for full functionality)
ALPHA_VANTAGE_API_KEY=your_key_here
FINNHUB_API_KEY=your_key_here
POLYGON_API_KEY=your_key_here
TIINGO_API_KEY=your_key_here
FMP_API_KEY=your_key_here
OPENAI_API_KEY=your_key_here

# Performance & Limits (Recommended for production/GitHub deployment)
# Keep these LOW for public deployment to avoid timeouts and API rate limits

# Universe size - number of stocks to scan
# Local dev: 50-200, GitHub/Streamlit Cloud: 10-30
UNIVERSE_LIMIT=20

# Historical data lookback days
# Local: 90, GitHub: 60-90
LOOKBACK_DAYS=90

# Smart scan mode (true/false)
# true = focused scan, false = broader scan
SMART_SCAN=true

# Number of results to show
TOPN_RESULTS=15

# Number of final recommendations
TOPK_RECOMMEND=5

# Budget (optional, can be changed in UI)
# BUDGET_TOTAL=5000
# MIN_POSITION=500
